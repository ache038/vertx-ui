{
  "compilerOptions": {
    "outDir": "build",
    "experimentalDecorators": true,
    "noImplicitAny": false,
    "module": "commonjs",
    "target": "es2016",
    "sourceMap": false,
    "alwaysStrict": false,
    "allowJs": true,
    "noImplicitUseStrict": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "environment": [
        "src/environment"
      ],
      "entity": [
        "src/entity"
      ],
      "hooker": [
        "src/hooker"
      ],
      "lang": [
        "src/cab"
      ],
      "conjunction": [
        "src/conjunction"
      ],
      "coaction": [
        "src/conaction"
      ],
      "combination": [
        "src/combination"
      ],
      "control": [
        "src/control"
      ],
      "vie-joy": [
        "src/vie-joy"
      ],
      "anima": [
        "src/anima"
      ],
      "ux": [
        "src/ux"
      ],
      "anno": [
        "src/anno"
      ],
      "hotel": [
        "src/hotel"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "src/**/*.js"
  ],
  "include": [
    "src/entity/**/*.ts",
    "src/c*/**/*.ts",
    "src/anima/**/*.ts"
  ]
}
