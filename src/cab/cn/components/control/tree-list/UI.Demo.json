{
    "_page": {
        "title": "TreeList - 「树过滤」专用多级列表"
    },
    "_grid": {
        "tree": {
            "branch": "parent",
            "display": "name"
        },
        "query": {
            "projection": [],
            "pager": "1,8",
            "sorter": "updateTime=DESC",
            "criteria": {}
        },
        "options": {
            "layout.divide": "5,19",
            "tree.level": 2,
            "tree.expand.default": true,
            "tree.search.enabled": true,
            "tree.edit.enabled": true,
            "tree.dialog.add": "添加节点",
            "tree.dialog.edit": "编辑节点",
            "tree.root": "根类型",
            "tree.filter": "category",
            "mock.enabled": true,
            "mock.keys": "code,name,description,manager,active",
            "search.cond.message": {
                "code": "代码",
                "name": "名称",
                "manager": "经理",
                "active": "启用"
            },
            "search.cond": [
                "name,c",
                "code,c"
            ],
            "search.enabled": true,
            "search.placeholder": "名称/代码",
            "search.advanced": true,
            "search.advanced.width": "30%",
            "search.advanced.title": "搜索记录",
            "tabs.list": "记录列表",
            "tabs.edit": "编辑部门",
            "submit.edit": "$opSave",
            "submit.reset": "$opReset",
            "ajax.get.uri": "/api/dept/:id",
            "ajax.delete.uri": "/api/dept/:id",
            "confirm.delete": "确认删除当前记录？",
            "row.add": "添加"
        },
        "table": {
            "columns": [
                {
                    "dataIndex": "name",
                    "title": "记录名称",
                    "edit": {
                        "$render": "TEXT"
                    }
                },
                {
                    "dataIndex": "code",
                    "title": "记录代码",
                    "edit": {
                        "$render": "TEXT"
                    }
                },
                {
                    "title": "操作",
                    "dataIndex": "key",
                    "$render": "BUTTON",
                    "className": "ux-rightop-120",
                    "$option": {
                        "row": [
                            "保存",
                            "取消"
                        ],
                        "edit": "编辑",
                        "delete": "删除",
                        "delete-confirm": "是否删除该记录？"
                    }
                }
            ]
        }
    }
}