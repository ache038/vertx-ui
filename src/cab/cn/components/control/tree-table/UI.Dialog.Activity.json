{
    "_form": {
        "window": 0.5,
        "ui": [
            [
                "cat,所属归类,24,,,readOnly=true"
            ],
            [
                "procedureName,所属管理项,24,,,readOnly=true"
            ],
            [
                {
                    "metadata": "code,活动编号",
                    "optionConfig.rules": [
                        "required,请输入活动编号"
                    ]
                },
                {
                    "metadata": "name,活动名称",
                    "optionConfig.rules": [
                        "required,请输入活动名称"
                    ]
                }
            ],
            [
                {
                    "field": "weight",
                    "optionItem": {
                        "label": "权重"
                    },
                    "optionConfig": {
                        "validateTrigger": "onBlur",
                        "normalize": "decimal,10,6",
                        "rules": [
                            {
                                "required": true,
                                "message": "请输入权重"
                            }
                        ]
                    }
                },
                {
                    "field": "version",
                    "optionItem": {
                        "label": "版本"
                    },
                    "optionConfig": {
                        "validateTrigger": "onBlur",
                        "rules": [
                            {
                                "required": true,
                                "message": "请输入版本"
                            }
                        ]
                    }
                }
            ],
            [
                "description,活动描述,24"
            ],
            [
                "restriction,活动限制,24"
            ],
            [
                "input,活动输入,24"
            ],
            [
                "output,活动输出,24"
            ],
            [
                "condition,触发条件,24"
            ],
            [
                {
                    "field": "active",
                    "optionItem": {
                        "label": "启用"
                    },
                    "optionConfig": {
                        "valuePropName": "checked"
                    },
                    "render": "aiCheckbox"
                }
            ],
            [
                {
                    "metadata": "$button",
                    "hidden": true,
                    "optionJsx.bind": [
                        "$opAdd,,,,_submit=DIRECT",
                        "$opSave,,,,_submit=DIRECT"
                    ]
                }
            ]
        ],
        "hidden": {
            "inputs": [
                "key"
            ]
        }
    },
    "_modal": {
        "type": "success",
        "message": {
            "add": "您的活动项添加成功！",
            "edit": "您的活动项保存成功！"
        }
    }
}