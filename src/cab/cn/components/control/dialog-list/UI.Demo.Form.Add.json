{
    "_form": {
        "ui": [
            [
                {
                    "field": "code",
                    "optionItem": {
                        "label": "部门编号"
                    },
                    "optionConfig": {
                        "validateTrigger": "onBlur",
                        "rules": [
                            {
                                "required": true,
                                "message": "请输入部门编号"
                            }
                        ]
                    }
                }
            ],
            [
                {
                    "field": "name",
                    "optionItem": {
                        "label": "部门名称"
                    },
                    "optionConfig": {
                        "validateTrigger": "onBlur",
                        "rules": [
                            {
                                "required": true,
                                "message": "请输入部门名称"
                            }
                        ]
                    }
                }
            ],
            [
                {
                    "field": "active",
                    "optionItem": {
                        "label": "启用"
                    },
                    "optionConfig": {
                        "valuePropName": "checked"
                    },
                    "render": "aiCheckbox"
                }
            ],
            [
                {
                    "field": "$button",
                    "hidden": true
                }
            ]
        ],
        "hidden": {
            "inputs": []
        }
    },
    "_modal": {
        "type": "success",
        "message": {
            "add": "您的部门添加成功！",
            "edit": "您的部门保存成功！"
        }
    }
}
