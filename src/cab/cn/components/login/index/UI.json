{
    "_info": {
        "title": "ZeroUI开发框架",
        "backendLabel": "后端",
        "backend": "http://www.vertxup.cn",
        "frontendLabel": "前端",
        "frontend": "http://www.vertxui.cn"
    },
    "_form": {
        "ui": [
            [
                {
                    "field": "username",
                    "optionJsx": {
                        "prefix": {
                            "type": "user",
                            "style": {
                                "color": "white"
                            }
                        }
                    }
                }
            ],
            [
                {
                    "field": "password",
                    "optionJsx": {
                        "type": "password",
                        "prefix": {
                            "type": "lock",
                            "style": {
                                "color": "white"
                            }
                        }
                    }
                }
            ],
            [
                {
                    "field": "$button",
                    "optionJsx": {
                        "style": {
                            "textAlign": "left"
                        }
                    }
                }
            ]
        ],
        "buttons": {
            "fnLogin": {
                "key": "btnLogin",
                "type": "primary",
                "style": {
                    "marginRight": "10px"
                },
                "text": "登录"
            },
            "fnReset": {
                "key": "btnReset",
                "text": "重置"
            }
        }
    }
}