{
    "_form": {
        "window": 0.15,
        "ui": [
            [
                "title=用户基本信息"
            ],
            [
                {
                    "metadata": "username,账号,9,,,placeholder=请输入账号!",
                    "optionConfig.rules": [
                        "required,请输入账号，账号不可为空！",
                        {
                            "validator": "existing",
                            "message": "对不起，账号重复！",
                            "config": {
                                "uri": "/api/user/existing",
                                "method": "POST",
                                "params": {}
                            }
                        }
                    ]
                },
                "realname,姓名,5"
            ],
            [
                "alias,昵称,9",
                {
                    "metadata":"mobile,手机号,5,,,placeholder=请输入手机号!",
                    "optionConfig.rules": [
                        "required,请输入手机号,手机号不能为空!",
                        {
                            "max": 11,
                            "pattern": "0?(13|14|15|18|17)[0-9]{9}",
                            "message": "格式错误,请正确输入手机号！"
                        }
                    ]
                }
            ],
            [
                {
                    "metadata":"email,邮箱,9,,,placeholder=请输入邮箱!",
                    "optionConfig.rules": [
                        "required,请输入邮箱,邮箱不能为空!",
                        {
                            "pattern": "\\w[-\\w.+]*@([A-Za-z0-9][-A-Za-z0-9]+\\.)+[A-Za-z]{2,14}",
                            "message": "格式错误,请正确输入邮件地址！"
                        }
                    ]
                },
                {
                    "metadata": "active,启用,5,,aiCheckbox",
                    "optionConfig": {
                        "valuePropName": "checked"
                    }
                }
            ],
            [
                "title=业务模型信息"
            ],
            [
                "modelId,描述模型,14"
            ],
            [
                "modelKey,描述记录,14"
            ],
            [
                {
                    "metadata": "$button",
                    "hidden": true,
                    "optionJsx.extension": [
                        "$opSave,保存,SUBMIT,primary",
                        "$opDelete,删除,KEY",
                        "$opReset,重置,RESET"
                    ],
                    "span": 24
                }
            ]
        ],
        "hidden": [
            "key"
        ],
        "op": {
            "$opSave": "act.user.save",
            "$opDelete": "act.user.delete"
        }
    },
    "_modal": {
        "success": {
            "saved": "您好，用户信息编辑成功！",
            "removed": "当前用户信息已删除成功！"
        }
    }
}