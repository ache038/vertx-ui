{
    "_form": {
        "ui": [
            [
                {
                    "metadata": "$button",
                    "hidden": true,
                    "optionJsx.extension": [
                        "$opAdd,添加,SUBMIT,primary",
                        "$opReset,重置,RESET"
                    ],
                    "span": 24
                }
            ],
            [
                "title=基本信息"
            ],
            [
                {
                    "metadata": "name,名称,8,,,placeholder=请输入名称",
                    "optionConfig.rules": [
                        "required,请输入名称，名称不可为空！"
                    ]
                },
                {
                    "metadata": "code,编码,8,,,placeholder=（全大写，如:已审核-APPROVED）",
                    "optionConfig.rules": [
                        "required,请输入编码，编码不可为空！",
                        {
                            "validator": "existing",
                            "message": "对不起，编码重复！",
                            "config": {
                                "uri": "/api/x-category/existing",
                                "method": "POST",
                                "params": {
                                    "type": "FORM:type",
                                    "sigma":"PROP:app.sigma"
                                }
                            }
                        }
                    ]
                }
            ],
            [
                {
                    "metadata": "parentId,父类型,8,,aiTreeSelect",
                    "optionJsx.config.datum": "source=data.category,key=key",
                    "optionJsx.config.tree": "text=name",
                    "optionJsx.config.selection": "mode=FULL",
                    "optionJsx.allowClear":true
                }
            ],
            [
                {
                    "metadata": "leaf,叶节点,8,,aiCheckbox",
                    "optionConfig":{
                        "valuePropName":"checked"
                    }
                },
                {
                    "metadata": "active,是否启用,8,,aiCheckbox",
                    "optionConfig":{
                        "valuePropName":"checked"
                    }
                }
            ],
            [
                {
                    "metadata": "comment,备注,18,,aiTextArea",
                    "optionJsx.rows": 3
                }
            ]
        ],
        "hidden": [
            "type",
            "identifier"
        ],
        "op": {
            "$opAdd": "act.category.add"
        },
        "initial":{
            "identifier":"PROP:$identifier"
        }
    },
    "_modal": {
        "success": {
            "added": "您好，您的信息添加成功！"
        }
    }
}