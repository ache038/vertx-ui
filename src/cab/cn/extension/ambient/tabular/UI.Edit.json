{
    "_form": {
        "window": 0.15,
        "ui": [
            [
                "title=基本信息"
            ],
            [
                "name,用户组名称,14"
            ],
            [
                "code,用户组编码,14"
            ],
            [
                {
                    "metadata": "$button",
                    "hidden": true,
                    "optionJsx.extension": [
                        "$opSave,保存,$opSave,primary",
                        "$opDelete,删除,$opDelete",
                        "$opReset,重置,$opReset"
                    ],
                    "span": 24
                }
            ]
        ],
        "hidden": {
            "inputs": [
                "key",
                "type"
            ]
        },
        "actions": {
            "op": {
                "$opSave": "act.tabular.save",
                "$opDelete": "act.tabular.delete"
            }
        }
    },
    "_modal": {
        "success": {
            "saved": "您好，您的信息更新成功！",
            "removed": "当前记录删除成功！"
        }
    }
}