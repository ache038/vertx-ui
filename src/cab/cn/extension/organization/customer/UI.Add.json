{
    "_form": {
        "window": 1,
        "ui": [
            [
                "title=基本信息"
            ],
            [
                "name,名称,12",
                {
                    "metadata": "code,编码,12,,,placeholder=（根据规范编码全大写，如ZBANK）",
                    "optionConfig.rules": [
                        "required,请输入编码，编码不可为空！",
                        {
                            "validator": "existing",
                            "message": "对不起，编码重复！",
                            "config": {
                                "uri": "/api/customer/existing",
                                "method": "POST",
                                "params": {}
                            }
                        }
                    ]
                }
            ],
            [
                {
                    "metadata":"taxCode,税号,12,,,placeholder=由15/18/20位字符组成",
                    "optionConfig.rules": [
                        "required,请输入税号，税号不能为空",
                        {
                            "min": 15,
                            "pattern": "^[A-Za-z0-9]{15}$|^[A-Za-z0-9]{18}$|^[A-Za-z0-9]{20}$",
                            "message": "格式错误,请正确输入税号！"
                        }
                    ]
                },
                {
                    "metadata":"email,企业邮箱,12,,,placeholder=（XXX@XXX格式）",
                    "optionConfig.rules": [
                        "required,请输入电子邮件",
                        {
                            "pattern": "\\w[-\\w.+]*@([A-Za-z0-9][-A-Za-z0-9]+\\.)+[A-Za-z]{2,14}",
                            "message": "格式错误,请正确输入邮件地址！"
                        }
                    ]
                }
            ],
            [
                {
                    "metadata":"phone,座机,12,,,placeholder=格式:(区号-座机号)或(座机号)",
                    "optionConfig.rules": [
                        "required,请输入座机号，座机号不能为空",
                        {
                            "pattern": "(^(\\d{3,4}-)?\\d{7,8}$)",
                            "message": "格式错误,请正确输入座机号！"
                        }
                    ]
                },
                {
                    "metadata":"fax,传真,12,,,placeholder=格式:(分机号-传真号)或(传真号)",
                    "optionConfig.rules": [
                        "required,请输入传真号，传真号不能为空",
                        {
                            "pattern": "(^(\\d{3,4}-)?\\d{7,8}$)",
                            "message": "格式错误,请正确输入传真号！"
                        }
                    ]
                }
            ],
            [
                {
                    "metadata": "companyId,所属公司,12,,aiTreeSelect",
                    "optionJsx.config.datum": "source=resource.companys,value=key,label=name",
                    "optionJsx.config.tree":"text=name,parent=companyId",
                    "optionJsx.config.selection":"mode=FULL",
                    "optionConfig.rules":[
                        "required,请选择客户所属的公司！"
                    ]
                },
                {
                    "metadata": "type,分类,12,,aiSelect",
                    "optionJsx.config.datum": "source=customer.type,value=key,label=name"
                }
            ],
            [
                "address,地址,12",
                {
                    "metadata": "active,启用,12,,aiCheckbox",
                    "optionConfig": {
                        "valuePropName": "checked"
                    }
                }
            ],
            [
                "title=联系人信息"
            ],
            [
                "contactName,联系人名称,12,,,placeholder=（如：张**、王**等）",
                {
                    "metadata":"contactPhone,联系人电话,12,,,placeholder=请输入手机号",
                    "optionConfig.rules": [
                        "required,请输入手机号，手机号不能为空",
                        {
                            "max": 11,
                            "pattern": "0?(13|14|15|18|17)[0-9]{9}",
                            "message": "格式错误,请正确输入手机号！"
                        }
                    ]
                }
            ],
            [
                "contactOnline,在线联系方式,12"
            ],
            [
                {
                    "metadata": "comment,备注,24,,aiTextArea",
                    "optionJsx.rows": 4
                }
            ],
            [
                {
                    "metadata": "$button",
                    "hidden": true,
                    "optionJsx.extension": [
                        "$opAdd,添加,SUBMIT,primary",
                        "$opReset,重置,RESET"
                    ],
                    "span": 24
                }
            ]
        ],
        "hidden": [],
        "op": {
            "$opAdd": "act.customer.add"
        }
    },
    "_modal": {
        "success": {
            "added": "您好，客户信息添加成功！"
        }
    }
}