{
    "_form": {
        "window": 1,
        "ui": [
            [
                "title=基本信息"
            ],
            [
                "name,名称,12",
                "code,编号,12"
            ],
            [
                {
                    "metadata":"taxCode,税号,12,,,type=taxCode",
                    "optionConfig.validateTrigger": "onBlur",
                    "optionConfig.rules": [
                        "required,请输入税号",
                        {
                            "min": 15,
                            "pattern": "^[A-Z0-9]{15}$|^[A-Z0-9]{18}$|^[A-Z0-9]{20}$",
                            "message": "请正确输入税号！"
                        }
                    ]
                },
                {
                    "metadata":"email,企业邮箱,12,,,type=email",
                    "optionConfig.validateTrigger": "onBlur",
                    "optionConfig.rules": [
                        "required,请输入电子邮件",
                        {
                            "pattern": "\\w[-\\w.+]*@([A-Za-z0-9][-A-Za-z0-9]+\\.)+[A-Za-z]{2,14}",
                            "message": "请正确输入邮件地址！"
                        }
                    ]
                }
            ],
            [
                {
                    "metadata":"phone,座机,12,,,type=phone",
                    "optionConfig.validateTrigger": "onBlur",
                    "optionConfig.rules": [
                        "required,请输入座机号",
                        {
                            "pattern": "[0-9-()（）]{7,18}",
                            "message": "请正确输入座机号！"
                        }
                    ]
                },
                {
                    "metadata":"fax,传真号,12,,,type=fax",
                    "optionConfig.validateTrigger": "onBlur",
                    "optionConfig.rules": [
                        "required,请输入传真号",
                        {
                            "pattern": "(^(\\d{3,4}-)?\\d{7,8})$|^((1[0-9][0-9]\\d{8}$))",
                            "message": "请正确输入传真号！"
                        }
                    ]
                }
            ],
            [
                {
                    "metadata": "companyId,上级公司,12,,aiSelect",
                    "optionJsx.config.datum": "source=ajax.companys,value=key,label=name"
                },
                {
                    "metadata": "type,分类,12,,aiSelect",
                    "optionJsx.config.datum": "source=company.nature,value=key,label=name"
                }
            ],
            [
                "corporationName,企业法人,12",
                {
                    "metadata":"corporationPhone,法人电话,12,,,type=corporationPhone",
                    "optionConfig.validateTrigger": "onBlur",
                    "optionConfig.rules": [
                        "required,请输入法人电话号",
                        {
                            "max": 11,
                            "pattern": "0?(13|14|15|18|17)[0-9]{9}",
                            "message": "请正确输入法人电话号！"
                        }
                    ]
                }
            ],
            [
                "address,地址,12",
                {
                    "metadata": "active,启用,12,,aiCheckbox",
                    "optionConfig": {
                        "valuePropName": "checked"
                    }
                }
            ],
            [
                "title=联系人信息"
            ],
            [
                "contactName,联系人名称,12",
                {
                    "metadata":"contactPhone,联系人电话,12,,,type=contactPhone",
                    "optionConfig.validateTrigger": "onBlur",
                    "optionConfig.rules": [
                        "required,请输入手机号",
                        {
                            "max": 11,
                            "pattern": "0?(13|14|15|18|17)[0-9]{9}",
                            "message": "请正确输入手机号！"
                        }
                    ]
                }
            ],
            [
                "contactOnline,在线联系方式,12"
            ],
            [
                {
                    "metadata": "comment,备注,24,,aiTextArea",
                    "optionJsx.rows": 4
                }
            ],
            [
                {
                    "metadata": "$button",
                    "hidden": true,
                    "optionJsx.extension": [
                        "$opSave,保存,SUBMIT,primary",
                        "$opDelete,删除,KEY",
                        "$opReset,重置,RESET"
                    ],
                    "span": 24
                }
            ]
        ],
        "hidden": [
            "key"
        ],
        "op": {
            "$opSave": "act.customer.save",
            "$opDelete": "act.customer.delete"
        }
    },
    "_modal": {
        "success": {
            "saved": "您好，公司信息编辑成功！",
            "removed": "当前公司信息已删除成功！"
        }
    }
}