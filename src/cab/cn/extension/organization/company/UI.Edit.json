{

    "_form": {
        "window": 1,
        "columns":3,
        "ui": [
            [
                "title=基本信息"
            ],
            [
                "title,公司标题",
                {
                    "metadata":"name,公司名称",
                    "optionConfig.rules":[
                        "required,请输入公司名称",
                        {
                            "validator":"existing",
                            "message":"对不起，该公司名称已经在系统中存在！",
                            "config":{
                                "uri":"/api/company/existing",
                                "method":"POST"
                            }
                        }
                    ]
                }
            ],
            [
                "homepage,公司主页,16"
            ],
            [
                "phone,座机",
                "email,邮箱",
                "fax,传真"
            ],
            [
                "address,公司地址,24"
            ],
            [
                "title=商务信息"
            ],
            [
                "taxTitle,发票抬头",
                "taxCode,公司税号"
            ],
            [
                "corporationName,公司法人",
                "corporationPhone,法人电话"
            ],
            [
                "contactName,联系人姓名",
                "contactPhone,联系人电话"
            ],
            [
                "comment,公司简介,24,,aiTextArea,rows=4"
            ],
            [
                {
                    "metadata": "$button",
                    "hidden": true,
                    "optionJsx.extension": [
                        "$opSave,保存,SUBMIT,primary",
                        "$opDelete,删除,KEY",
                        "$opReset,重置,RESET"
                    ],
                    "span": 24
                }
            ]
        ],
        "hidden": [
            "key","companyId"
        ],
        "op": {
            "$opSave": "act.company.save",
            "$opDelete": "act.company.delete"
        }
    },
    "_modal": {
        "success": {
            "saved": "您好，您的分公司信息更新成功！",
            "removed": "当前分公司信息已删除成功！"
        }
    }
}