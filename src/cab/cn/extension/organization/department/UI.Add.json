{
    "_form": {
        "window": 1,
        "ui": [
            [
                "title=基本信息"
            ],
            [
                "name,名称,12",
                "code,编号,12"
            ],
            [
                {
                    "metadata": "managerName,部门经理,12,,aiListSelector",
                    "optionJsx.config": {
                        "ajax": {
                            "metadata": "POST,/api/user/search,1,8,sorter=createdAt`DESC"
                        },
                        "linker": {
                            "key": "managerId",
                            "realname": "managerName"
                        },
                        "table": {
                            "columns": [
                                "username,用户账号",
                                "realname,用户名称",
                                "comment,备注",
                                "mobile,手机号",
                                "email,邮箱",
                                "active,是否启用"
                            ]
                        },
                        "validation": "请选择部门经理！",
                        "window": "请选择部门经理,选择,关闭,false,800,false",
                        "search": {
                            "username,c": "账号",
                            "realname,c": "名称"
                        }
                    }
                },
                {
                    "metadata": "deptId,上级部门,12,,aiSelect",
                    "optionJsx.config.datum": "source=ajax.depts,value=key,label=name"
                }
            ],
            [
                {
                    "metadata": "companyId,所属公司,12,,aiSelect",
                    "optionJsx.config.datum": "source=ajax.companys,value=key,label=name"
                },
                {
                    "metadata": "active,启用,12,,aiCheckbox",
                    "optionConfig": {
                        "valuePropName": "checked"
                    }
                }
            ],
            [
                {
                    "metadata": "comment,备注,24,,aiTextArea",
                    "optionJsx.rows": 4
                }
            ],
            [
                {
                    "metadata": "$button",
                    "hidden": true,
                    "optionJsx.extension": [
                        "$opAdd,添加,SUBMIT,primary",
                        "$opReset,重置,RESET"
                    ],
                    "span": 24
                }
            ]
        ],
        "hidden": [
            "managerId"
        ],
        "op": {
            "$opAdd": "act.dept.add"
        }
    },
    "_modal": {
        "success": {
            "added": "您好，部门信息添加成功！"
        }
    }
}