{
    "_form": {
        "window": 0.15,
        "ui": [
            [
                "title=部门基本信息"
            ],
            [
                "name,部门名称,14"
            ],
            [
                "code,部门编号,14"
            ],
            [
                "companyId,所属公司,14"
            ],
            [
                "comment,部门备注,14"
            ],
            [
                "title=部门业务信息"
            ],
            [
                "managerId,部门经理,14"
            ],
            [
                "managerName,经理名称,14"
            ],
            [
                "metadata,附加配置,14"
            ],
            [
                {
                    "field": "active",
                    "optionItem": {
                        "label": "启用"
                    },
                    "optionConfig": {
                        "valuePropName": "checked"
                    },
                    "render": "aiCheckbox"
                }
            ],
            [
                {
                    "metadata": "$button",
                    "hidden": true,
                    "optionJsx.extension": [
                        "$opSave,保存,$opSave,primary",
                        "$opDelete,删除,$opDelete",
                        "$opReset,重置,$opReset"
                    ],
                    "span": 24
                }
            ]
        ],
        "hidden": {
            "inputs": [
                "key"
            ]
        },
        "actions": {
            "op": {
                "$opSave": "act.dept.save",
                "$opDelete": "act.dept.delete"
            }
        }
    },
    "_modal": {
        "success": {
            "saved": "您好，部门信息编辑成功！",
            "removed": "当前部门信息已删除成功！"
        }
    }
}