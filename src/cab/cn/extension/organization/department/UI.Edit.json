{
    "_form": {
        "window": 1,
        "ui": [
            [
                "title=基本信息"
            ],
            [
                "name,名称,12",
                "code,编号,12"
            ],
            [
                "managerId,部门经理,12",
                {
                    "metadata": "deptId,上级部门,12,,aiSelect",
                    "optionJsx.config.datum": "source=ajax.depts,value=key,label=name"
                }
            ],
            [
                {
                    "metadata": "companyId,所属公司,12,,aiSelect",
                    "optionJsx.config.datum": "source=ajax.companys,value=key,label=name"
                },
                {
                    "metadata": "active,启用,12,,aiCheckbox",
                    "optionConfig": {
                        "valuePropName": "checked"
                    }
                }
            ],
            [
                {
                    "metadata": "comment,备注,24,,aiTextArea",
                    "optionJsx.rows": 4
                }
            ],
            [
                {
                    "metadata": "$button",
                    "hidden": true,
                    "optionJsx.extension": [
                        "$opSave,保存,SUBMIT,primary",
                        "$opDelete,删除,KEY",
                        "$opReset,重置,RESET"
                    ],
                    "span": 24
                }
            ]
        ],
        "hidden": [
            "key"
        ],
        "op": {
            "$opSave": "act.dept.save",
            "$opDelete": "act.dept.delete"
        }
    },
    "_modal": {
        "success": {
            "saved": "您好，部门信息编辑成功！",
            "removed": "当前部门信息已删除成功！"
        }
    }
}