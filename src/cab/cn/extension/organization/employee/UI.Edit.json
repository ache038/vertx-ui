{

    "_form": {
        "window": 1,
        "columns":3,
        "ui": [
            [
                "title=基本信息"
            ],
            [
                "workNumber,员工编号,,,,readOnly=true",
                "workTitle,头衔"
            ],
            [
                {
                    "metadata": "realname,员工名称,,,aiListSelector",
                    "optionJsx.config": {
                        "ajax": {
                            "metadata": "POST,/api/identity/search,1,8,sorter=createdAt`DESC"
                        },
                        "linker": {
                            "key": "identityId",
                            "realname": "realname"
                        },
                        "table": {
                            "columns": [
                                "code,系统编号",
                                "realname,真实姓名",
                                "country,国籍",
                                "nativePlace,籍贯",
                                "nation,民族",
                                {
                                    "title": "出生日期",
                                    "dataIndex": "birthday",
                                    "$render": "DATE",
                                    "$format": "YYYY-MM-DD"
                                },
                                "contactMobile,联系手机",
                                "address,居住地址"
                            ]
                        },
                        "validation": "请选择员工！",
                        "window": "请选择员工,选择,关闭,false,800,false",
                        "search": {
                            "realname,c": "真实姓名",
                            "code,c": "系统编号"
                        }
                    }
                },
                {
                    "metadata": "type,员工分类,,,aiSelect",
                    "optionJsx.config.datum": "source=company.nature,value=key,label=name"
                }
            ],
            [
                {
                    "metadata": "companyId,所属公司,,,aiTreeSelect",
                    "optionJsx.config.datum": "source=resource.companies,value=key,label=name",
                    "optionJsx.config.tree":"text=name,parent=companyId",
                    "optionJsx.config.selection":"mode=FULL",
                    "optionConfig.rules":[
                        "required,请选择部门所挂靠的公司！"
                    ]
                },
                {
                    "metadata": "deptId,所属部门,,,aiTreeSelect,placeholder=（不选择时就无上级部门）",
                    "optionJsx.config.datum": "source=resource.department,value=key,label=name",
                    "optionJsx.config.tree":"text=name,parent=deptId",
                    "optionJsx.config.selection":"mode=FULL",
                    "optionJsx.config.cascade": {
                        "source": "companyId",
                        "target": "companyId"
                    },
                    "optionJsx.allowClear":true
                }
            ],
            [
                {
                    "metadata":"workEmail,办公邮箱,,,,placeholder=（XXX@XXX格式）",
                    "optionConfig.rules": [
                        "required,请输入电子邮件",
                        {
                            "pattern": "\\w[-\\w.+]*@([A-Za-z0-9][-A-Za-z0-9]+\\.)+[A-Za-z]{2,14}",
                            "message": "格式错误,请正确输入邮件地址！"
                        }
                    ]
                },
                {
                    "metadata":"workPhone,办公电话,,,,placeholder=（XXX-XXXXXXXX格式）",
                    "optionConfig.rules": [
                        "required,请输入办公电话，办公电话不能为空",
                        {
                            "pattern": "[0-9-()（）]{7,18}",
                            "message": "格式错误,请正确输入办公电话！"
                        }
                    ]
                }
            ],
            [
                {
                    "metadata": "active,启用,,,aiCheckbox",
                    "optionConfig": {
                        "valuePropName": "checked"
                    }
                }
            ],
            [
                "workLocation,办公地点,24,,aiTextArea,rows=4"
            ],
            [
                {
                    "metadata": "$button",
                    "hidden": true,
                    "optionJsx.extension": [
                        "$opSave,保存,SUBMIT,primary",
                        "$opDelete,删除,KEY",
                        "$opReset,重置,RESET"
                    ],
                    "span": 24
                }
            ]
        ],
        "hidden": [
            "key",
            "identityId"
        ],
        "op": {
            "$opSave": "act.employee.save",
            "$opDelete": "act.employee.delete"
        }
    },
    "_modal": {
        "success": {
            "saved": "您好，您的分公司信息更新成功！",
            "removed": "当前分公司信息已删除成功！"
        }
    }
}