{
    "_form": {
        "layout": "horizontal",
        "ui": [
            [
                {
                    "field": "username",
                    "optionJsx": {
                        "prefix": {
                            "type": "user",
                            "style": {
                                "color": "white"
                            }
                        }
                    }
                }
            ],
            [
                {
                    "field": "password",
                    "optionJsx": {
                        "type": "password",
                        "prefix": {
                            "type": "lock",
                            "style": {
                                "color": "white"
                            }
                        }
                    }
                }
            ],
            [
                {
                    "metadata": "$button",
                    "optionJsx.align":"center",
                    "optionJsx.buttons": {
                        "submit": "$opLogin,登录",
                        "reset": "$opReset,重置"
                    },
                    "span":24
                }
            ]
        ]
    },
    "_modal": {
        "success": {
        },
        "error": {
            "user": "账号不存在！",
            "password": "密码错误，请输入正确密码！"
        }
    }
}