{
    "_page": {
        "title": "修改密码"
    },
    "_alert": {
        "message": "修改说明",
        "description": [
            "您需要提供您的原始登录密码。",
            "密码修改过后，系统会重新设置您的账号，请退出系统重新登录。"
        ]
    },
    "_form": {
        "window": 0.15,
        "ui": [
            [
                {
                    "metadata": "username,登录账号,14,,,readOnly=true"
                }
            ],
            [
                {
                    "metadata": "opassword,旧密码,14,,,type=password",
                    "optionConfig.validateTrigger": "onBlur",
                    "optionConfig.rules": [
                        "required,请输入旧密码",
                        {
                            "min": 8,
                            "message": "密码长度必须大于8个字符！"
                        }
                    ]
                }
            ],
            [
                {
                    "metadata": "npassword,新密码,14,,,type=password",
                    "optionConfig.validateTrigger": "onBlur",
                    "optionConfig.rules": [
                        "required,请输入新密码",
                        {
                            "min": 8,
                            "message": "密码长度必须大于8个字符！"
                        },
                        {
                            "validator": "diff",
                            "message": "新密码不能和旧密码相同！",
                            "config": {
                                "to": "opassword"
                            },
                            "condition": [
                                "value.length >= 8"
                            ]
                        }
                    ]
                }
            ],
            [
                {
                    "metadata": "cpassword,确认密码,14,,,type=password",
                    "optionConfig.validateTrigger": "onBlur",
                    "optionConfig.rules": [
                        "required,请输入新密码",
                        {
                            "min": 8,
                            "message": "密码长度必须大于等于8个字符！"
                        },
                        {
                            "validator": "same",
                            "message": "两次输入密码不一致！",
                            "config": {
                                "to": "npassword"
                            },
                            "condition": [
                                "to.length >= 8"
                            ]
                        }
                    ]
                }
            ],
            [
                {
                    "metadata": "$button",
                    "optionJsx.extension": [
                        "opPassword,更改密码,$opPassword,primary",
                        "opReset,重置,$opReset"
                    ],
                    "span": 24
                }
            ]
        ],
        "hidden": {
            "inputs": [
                "key"
            ]
        },
        "actions": {
            "op": {
                "opPassword": "act.user.password"
            }
        }
    }
}