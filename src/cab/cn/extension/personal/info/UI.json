{
    "_page": {
        "title": "更新个人信息"
    },
    "_form": {
        "window": 0.15,
        "ui": [
            [
                "title=个人信息"
            ],
            [
                "username,登录账号,14,,,readOnly=true"
            ],
            [
                "realname,真实姓名,10",
                "alias,昵称,14"
            ],
            [
                {
                    "metadata":"mobile,手机号,10,,,type=mobile",
                    "optionConfig.validateTrigger": "onBlur",
                    "optionConfig.rules": [
                        "required,请输入手机号",
                        {
                            "max": 11,
                            "pattern": "0?(13|14|15|18|17)[0-9]{9}",
                            "message": "请正确输入手机号！"
                        }
                    ]
                },
                {
                    "metadata":"email,电子邮件,14,,,type=email",
                    "optionConfig.validateTrigger": "onBlur",
                    "optionConfig.rules": [
                        "required,请输入电子邮件",
                        {
                            "pattern": "\\w[-\\w.+]*@([A-Za-z0-9][-A-Za-z0-9]+\\.)+[A-Za-z]{2,14}",
                            "message": "请正确输入邮件地址！"
                        }
                    ]
                }
            ],
            [
                "title=办公信息"
            ],
            [
                "workNumber,工号,14,,,readOnly=true"
            ],
            [
                "workTitle,工作头衔,14"
            ],
            [
                {
                    "metadata":"workPhone,工作电话,10,,,type=workPhone",
                    "optionConfig.validateTrigger": "onBlur",
                    "optionConfig.rules": [
                        "required,请输入工作电话",
                        {
                            "pattern": "[0-9-()（）]{7,18}",
                            "message": "请正确输入工作电话！"
                        }
                    ]
                },
                {
                    "metadata":"workEmail,工作邮件,14,,,type=workEmail",
                    "optionConfig.validateTrigger": "onBlur",
                    "optionConfig.rules": [
                        "required,请输入工作邮件",
                        {
                            "pattern": "\\w[-\\w.+]*@([A-Za-z0-9][-A-Za-z0-9]+\\.)+[A-Za-z]{2,14}",
                            "message": "请正确输入工作邮件！"
                        }
                    ]
                }
            ],
            [
                "workLocation,办公地点,24"
            ],
            [
                {
                    "metadata": "$button",
                    "optionJsx.extension": [
                        "opProfile,保存,$opProfile,primary",
                        "opReset,重置,$opReset"
                    ],
                    "span": 24
                }
            ]
        ],
        "hidden": {
            "inputs": [
                "key",
                "employeeId"
            ]
        },
        "actions": {
            "op": {
                "opProfile": "act.user.profile"
            }
        }
    },
    "_modal": {
        "success": {
            "profile": "您好，:realname！您的个人信息更新成功！"
        }
    }
}