{

    "_form": {
        "window": 1,
        "columns":3,
        "ui": [
            [
                "title=基本信息"
            ],
            [
                "workCnName,中文名",
                "workEnName,英文名",
                "workNumber,工号,,,,readOnly=true"
            ],
            [
                "workTitle,职务",
                {
                    "metadata": "type,分类,,,aiSelect",
                    "optionJsx.config.datum": "source=identity.type,value=key,label=name"
                }
            ],
            [
                {
                    "metadata": "companyId,所属公司,,,aiTreeSelect",
                    "optionJsx.config.datum": "source=resource.companys,value=key,label=name",
                    "optionJsx.config.tree":"text=name,parent=companyId",
                    "optionJsx.config.selection":"mode=FULL",
                    "optionConfig.rules":[
                        "required,请选择部门所挂靠的公司！"
                    ]
                },
                {
                    "metadata": "deptId,所属部门,,,aiTreeSelect,placeholder=（不选择时就无上级部门）",
                    "optionJsx.config.datum": "source=resource.departments,value=key,label=name",
                    "optionJsx.config.tree":"text=name,parent=deptId",
                    "optionJsx.config.selection":"mode=FULL",
                    "optionJsx.config.cascade": {
                        "source": "companyId",
                        "target": "FORM:companyId"
                    },
                    "optionJsx.allowClear":true
                }
            ],
            [
                {
                    "metadata":"workEmail,办公邮箱,,,,placeholder=（XXX@XXX格式）",
                    "optionConfig.rules": [
                        "required,请输入电子邮件",
                        {
                            "pattern": "\\w[-\\w.+]*@([A-Za-z0-9][-A-Za-z0-9]+\\.)+[A-Za-z]{2,14}",
                            "message": "格式错误,请正确输入邮件地址！"
                        }
                    ]
                },
                {
                    "metadata":"workMobile,办公用手机,,,,placeholder=（XXX-XXXXXXXX格式）",
                    "optionConfig.rules": [
                        "required,请输入办公用手机，办公用手机不能为空",
                        {
                            "pattern": "0?(13|14|15|18|17)[0-9]{9}",
                            "message": "格式错误,请正确输入办公用手机！"
                        }
                    ]
                }
            ],
            [
                {
                    "metadata":"workPhone,办公电话,,,,placeholder=（XXX-XXXXXXXX格式）",
                    "optionConfig.rules": [
                        "required,请输入办公电话，办公电话不能为空",
                        {
                            "pattern": "[0-9-()（）]{7,18}",
                            "message": "格式错误,请正确输入办公电话！"
                        }
                    ]
                },
                {
                    "metadata":"workExtension,分机号,,,,placeholder=（XXX-XXXXXXXX格式）",
                    "optionConfig.rules": [
                        "required,请输入分机号，分机号不能为空",
                        {
                            "pattern": "[0-9-()（）]{7,18}",
                            "message": "格式错误,请正确输入分机号！"
                        }
                    ]
                }
            ],
            [
                {
                    "metadata": "active,启用,,,aiCheckbox",
                    "optionConfig": {
                        "valuePropName": "checked"
                    }
                }
            ],
            [
                "workLocation,办公地点,24,,aiTextArea,rows=3"
            ],
            [
                {
                    "metadata": "$button",
                    "hidden": true,
                    "optionJsx.extension": [
                        "$opSave,保存,SUBMIT,primary",
                        "$opDelete,删除,KEY",
                        "$opReset,重置,RESET"
                    ],
                    "span": 24
                }
            ]
        ],
        "hidden": [
            "key",
            "identityId"
        ],
        "op": {
            "$opSave": "act.employee.save",
            "$opDelete": "act.employee.delete"
        }
    },
    "_modal": {
        "success": {
            "saved": "您好，您的职员信息更新成功！",
            "removed": "当前职员信息已删除成功！"
        }
    }
}